<h2>Here's the burger menu!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            #{{id}}: {{burger_name}} {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that got devoured!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            #{{id}}: {{burger_name}} {{> burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a new Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured!
    </div>

    <button type="submit">Add Burger</button>
</form>